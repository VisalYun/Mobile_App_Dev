<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:id="@+id/bigbox"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/colorPrimary"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/smallbox"
            android:layout_toLeftOf="@+id/bigbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/smallbox2"
            android:layout_toRightOf="@+id/bigbox"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/smallbox3"
            android:layout_alignTop="@+id/bigbox"
            android:layout_alignLeft="@id/bigbox"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/smallbox4"
            android:layout_alignTop="@+id/bigbox"
            android:layout_alignRight="@id/bigbox"
            android:layout_marginRight="30dp"
            android:layout_marginTop="30dp"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/smallbox5"
            android:layout_width="25dp"
            android:layout_height="35dp"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>

    <TextView
            android:id="@+id/smallbox6"
            android:layout_alignTop="@+id/bigbox"
            android:layout_marginTop="105dp"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:background="@color/colorAccent"
            android:layout_centerInParent="true"/>



</RelativeLayout>